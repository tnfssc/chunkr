# URL for the service
SERVICE_URL=http://example.com

# PostgreSQL database connection URL
PG__URL='postgresql://username:password@localhost:5432/database_name'

# AWS S3 or compatible storage settings
AWS__ENDPOINT='https://your-storage-endpoint.com'
AWS__ACCESS_KEY='YOUR_ACCESS_KEY'
AWS__SECRET_KEY='YOUR_SECRET_KEY'
AWS__REGION='your-region'

# OCR confidence threshold
TASK__OCR_CONFIDENCE_THRESHOLD=0.85

# LLM settings
LLM__API_KEY=your_api_key_here
LLM__MAX_WIDTH=2000
LLM__MAX_HEIGHT=1000

# LLM API base URL and model
LLM__BASE_URL=https://api.openai.com/v1
LLM__MODEL=gpt-4-mini
